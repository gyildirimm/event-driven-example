{
  "ConnectionStrings": {
    "StockDatabase": "Host=postgresql-stock;Port=5432;Database=StockServiceDb;Username=admin;Password=123456",
    "RabbitMQ": "amqp://guest:guest@rabbitmq:5672/"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
    "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
      
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://observability-seq:5341" }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://observability-loki:3100",
          "labels": [
            {
              "key": "app",
              "value": "StockService"
            },
            {
              "key": "environment",
              "value": "development"
            }
          ],
          "propertiesAsLabels": ["RequestId", "RequestPath"]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "StockService.Api"
    }
  }
}
